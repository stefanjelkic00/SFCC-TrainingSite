            <step step-id="UpdateProductsStep" type="custom.UpdateProducts" enforce-restart="false">
                <description>Calls external API and updates product custom attributes (height, width, color)</description>
                <parameters>
                    <parameter name="ClientId">aaaaaaaaaaaaaaaaaaaaaaaaaaaaaa</parameter>
                </parameters>
            </step>
        </flow>
        <rules/>
        <triggers>
            <run-once enabled="false">
                <date>2025-06-06Z</date>
                <time>14:20:00.000Z</time>
            </run-once>
        </triggers>
    </job>

