<?xml version="1.0"?>

<form xmlns="http://www.demandware.com/xml/form/2008-04-19"

      validation="~/cartridge/scripts/forms/validate/newsletterFormCustomValidate.validate">

  <field formid="firstName" label="label.input.firstname.newsletter" type="string"
         mandatory="false" max-length="50"
         missing-error="error.message.required"
         range-error="error.message.lessthan50"/>

  <field formid="lastName" label="label.input.lastname.newsletter" type="string"
         mandatory="false" max-length="50"
         missing-error="error.message.required"
         range-error="error.message.lessthan50"/>
         
  <field formid="email" label="label.input.email.newsletter" type="string"
         mandatory="true" max-length="100"
         regexp="^[\\w.%+-]+@[\\w.-]+\\.[\\w]{2,6}$"
         missing-error="error.message.required"
         parse-error="error.message.parse.email"/>

</form>
